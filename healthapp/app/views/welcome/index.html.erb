<div class="jumbotron hero">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-push-7 phone-preview">
                <div class="inside-phone"><img src="assets/iphone.svg" class="device">
                    <div class="screen"></div>
                </div>
            </div>
            <div class="col-md-6 col-md-pull-3 get-it">
                <h1>No more hassle with out-of-pocket payments</h1>
                <!-- company intro  -->
                <div class="intro">
                    <h2 class="text-center Newsletter_header">
                        Helping patients find, book, and pay
                    </h2>
                    <p>
                        Manage and track out-of-pocket payments through edgedoc
                    </p>

                    <p class="text-center">
                        Coming up soon! Subscribe for our Beta.
                    </p>
                </div>

                <%= form_for @doctor, :url => {:controller => "doctors", :action => "create"}, :html => {:class => "form-inline", :method => :post} do |f| %>
                    <div class="firs_last_name_wrapper">
                        <%= f.text_field :first_name, :class => "form-control first_last_input", :placeholder => "First Name"%>
                        <%= f.text_field :last_name, :class => "form-control first_last_input", :placeholder => "Last Name"%>
                    </div>
                    <div class="form-group email_field">
                        <%= f.text_field :email, :class => "form-control email_input", :placeholder => "Your Email", :type => "email" %>
                        <%= f.submit "Subscribe", :class => "btn btn_edgedoc"%>
                    </div>
                <% end %>

            </div>
        </div>
    </div>
</div>

